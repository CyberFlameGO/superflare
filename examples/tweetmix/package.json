{
  "name": "tweetmix",
  "version": "1.0.0",
  "description": "An example Superflare app powered by Remix",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "npm run build:css && npm run build:remix",
    "build:remix": "remix build",
    "build:css": "npm run generate:css -- --minify",
    "dev:css": "npm run generate:css -- --watch",
    "dev:remix": "remix watch",
    "dev:wrangler": "wrangler pages dev public --compatibility-date=2023-01-18 --d1 DB --binding SESSION_SECRET=s --local --persist --live-reload",
    "dev": "touch ./app/tailwind.css && concurrently \"npm:dev:*\"",
    "generate:css": "npx tailwindcss -o ./app/tailwind.css",
    "start": "cross-env NODE_ENV=production npm run dev:wrangler",
    "db:migrate:fresh": "mkdir -p ./.wrangler/state/d1 && touch ./.wrangler/state/d1/TWEETS_DB.sqlite3 && sqlite3 ./.wrangler/state/d1/TWEETS_DB.sqlite3 < ./db/migrations.sql",
    "migrate": "superflare migrate"
  },
  "keywords": [],
  "author": "Josh Larson <jplhomer@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@remix-run/cloudflare": "^1.11.0",
    "@remix-run/react": "^1.11.0",
    "@remix-run/serve": "^1.11.0",
    "@superflare/cli": "*",
    "isbot": "^3.6.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "superflare": "workspace:*",
    "tiny-invariant": "^1.3.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "*",
    "@remix-run/dev": "^1.11.0",
    "@remix-run/eslint-config": "^1.11.0",
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.8",
    "autoprefixer": "^10.4.13",
    "concurrently": "^7.6.0",
    "eslint": "^8.27.0",
    "postcss": "^8.4.21",
    "tailwindcss": "^3.2.4",
    "tsconfig": "workspace:*",
    "typescript": "^4.8.4",
    "wrangler": "^2.8.0"
  },
  "engines": {
    "node": ">=16.13"
  }
}
