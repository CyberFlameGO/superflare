{
  "name": "remix-cms",
  "version": "1.0.0",
  "description": "An example Superflare app powered by Remix",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "npm run build:remix",
    "build:remix": "remix build",
    "dev:remix": "remix watch",
    "dev:wrangler": "wrangler pages dev public --compatibility-date=2023-01-18 --d1 DB --binding SESSION_SECRET=s --local --persist --live-reload",
    "dev": "concurrently \"npm:dev:*\"",
    "start": "cross-env NODE_ENV=production npm run dev:wrangler",
    "db:migrate:fresh": "mkdir -p ./.wrangler/state/d1 && touch ./.wrangler/state/d1/TWEETS_DB.sqlite3 && sqlite3 ./.wrangler/state/d1/TWEETS_DB.sqlite3 < ./db/migrations.sql",
    "migrate": "superflare migrate"
  },
  "keywords": [],
  "author": "Josh Larson <jplhomer@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@headlessui/react": "^1.7.11",
    "@heroicons/react": "^2.0.16",
    "@remix-run/cloudflare": "^1.13.0",
    "@remix-run/react": "^1.13.0",
    "@remix-run/serve": "^1.13.0",
    "@tailwindcss/forms": "^0.5.3",
    "clsx": "^1.2.1",
    "isbot": "^3.6.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "superflare": "workspace:*",
    "textarea-markdown-editor": "^1.0.4",
    "tiny-invariant": "^1.3.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20230215.0",
    "@remix-run/dev": "^1.13.0",
    "@remix-run/eslint-config": "^1.13.0",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "autoprefixer": "^10.4.13",
    "concurrently": "^7.6.0",
    "eslint": "^8.34.0",
    "postcss": "^8.4.21",
    "tailwindcss": "^3.2.7",
    "tsconfig": "workspace:*",
    "typescript": "^4.9.5",
    "wrangler": "^2.10.0"
  },
  "engines": {
    "node": ">=16.13"
  }
}
